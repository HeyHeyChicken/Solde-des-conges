{
  "manifest_version": 3,
  "name": "Assystem - Soldes des congés",
  "version": "1.1",
  "description": "Cette extention Chrome améliore la page des soldes des congés de l'entreprise Assystem.",
  "icons": {
    "128": "icons/128.png",
    "48": "icons/48.png",
    "16": "icons/16.png"
  },
  "action": {
    "default_icon": {
      "128": "icons/128.png",
      "48": "icons/48.png",
      "16": "icons/16.png"
    },
    "default_popup": "popup/index.html"
  },
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "author": "Antoine Duval",
  "homepage_url": "https://github.com/HeyHeyChicken/Assystem-Soldes-des-conges",
  "content_scripts": [
   {
     "matches": ["https://hive-dashboard.assystem.com/*"],
     "js": ["inject/script.js"],
     "css": ["inject/style.css"]
   }
 ]
}
